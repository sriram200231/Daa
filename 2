#include <stdio.h>
#include <math.h>

int isArmstrong(int num) {
    int originalNum = num;
    int sum = 0, digit;

    while (num > 0) {
        digit = num % 10;
        sum += pow(digit, 3); // For Armstrong numbers of order 3 (cube of digits)
        num /= 10;
    }

    return (sum == originalNum);
}

int main() {
    int number;

    printf("Enter a number: ");
    scanf("%d", &number);

    if (isArmstrong(number)) {
        printf("%d is an Armstrong number.\n", number);
    } else {
        printf("%d is not an Armstrong number.\n", number);
    }

    return 0;
}
